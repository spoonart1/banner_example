<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/simple_small_action_bar_only_back"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_root_layout"
      android:orientation="vertical"
      android:paddingBottom="@dimen/padding_size_medium"
      android:paddingLeft="@dimen/padding_size_high"
      android:paddingRight="@dimen/padding_size_high"
      android:paddingTop="@dimen/padding_size_medium"
      >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

      <com.rengwuxian.materialedittext.MaterialEditText
          android:id="@+id/et_first_field"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:maxLines="1"
          android:tag="field1"
          android:visibility="gone"
          android:textSize="@dimen/normal_text_size"
          app:met_floatingLabel="highlight"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelText="FIRST FIELD"
          app:met_primaryColor="?colorAccent"
          />

      <com.mikepenz.iconics.view.IconicsTextView
          android:id="@+id/ic_edit1"
          android:visibility="gone"
          android:text="{dsf-information}"
          android:clickable="true"
          android:gravity="center"
          android:textColor="@color/green_dompet_ori"
          android:padding="@dimen/padding_size_tiny"
          android:layout_width="@dimen/text_bg_width"
          android:layout_height="@dimen/text_bg_width"
          android:background="@drawable/button_white_oval"
          />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_size_medium"
        >

      <com.rengwuxian.materialedittext.MaterialEditText
          android:id="@+id/et_second_field"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_weight="1"
          android:visibility="gone"
          android:tag="field2"
          android:textColor="@color/green_dompet_ori"
          android:textSize="@dimen/normal_text_size"
          app:met_floatingLabel="highlight"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelText="SECOND FIELD"
          app:met_primaryColor="?colorAccent"
          />

      <com.mikepenz.iconics.view.IconicsTextView
          android:id="@+id/ic_edit2"
          android:text="{dsf-information}"
          android:clickable="true"
          android:visibility="gone"
          android:gravity="center"
          android:textColor="@color/green_dompet_ori"
          android:padding="@dimen/padding_size_tiny"
          android:layout_width="@dimen/text_bg_width"
          android:layout_height="@dimen/text_bg_width"
          android:background="@drawable/button_white_oval"
          />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_size_medium"
        >

      <com.rengwuxian.materialedittext.MaterialEditText
          android:id="@+id/et_third_field"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:maxLines="1"
          android:visibility="gone"
          android:tag="field3"
          android:textSize="@dimen/normal_text_size"
          app:met_floatingLabel="highlight"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelText="THIRD FIELD"
          app:met_primaryColor="?colorAccent"
          />

      <com.mikepenz.iconics.view.IconicsTextView
          android:id="@+id/ic_edit3"
          android:text="{dsf-information}"
          android:clickable="true"
          android:gravity="center"
          android:textColor="@color/green_dompet_ori"
          android:visibility="gone"
          android:padding="@dimen/padding_size_tiny"
          android:layout_width="@dimen/text_bg_width"
          android:layout_height="@dimen/text_bg_width"
          android:background="@drawable/button_white_oval"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_note"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_size_high"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        android:padding="@dimen/padding_size_high"
        >

      <TextView
          android:id="@+id/tv_note"
          android:gravity="center"
          android:textColor="@color/grey_700"
          android:text="Jangka waktu tersisa hingga usia anak Anda siap menempuh bangku kuliah \nadalah 15 tahun."
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <TextView
          android:id="@+id/tv_result_value"
          android:layout_marginTop="@dimen/padding_size_medium"
          android:text="Rp 0"
          android:layout_gravity="center_horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_size_high"
        android:background="@drawable/button_rounded_orange_send_stroked"
        android:enabled="false"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/text_button_selector_orange"
        />

  </LinearLayout>

</LinearLayout>