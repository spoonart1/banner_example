<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/simple_small_action_bar_only_back"/>
  <include layout="@layout/ds_line_divider"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <com.rengwuxian.materialedittext.MaterialEditText
          android:id="@+id/et_amount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_marginRight="@dimen/padding_size_high"
          android:layout_marginTop="@dimen/padding_size_high"
          android:hint="Rp 0"
          android:inputType="number"
          android:maxLines="1"
          android:textSize="@dimen/normal_text_size"
          app:met_floatingLabel="highlight"
          app:met_floatingLabelAlwaysShown="true"
          app:met_floatingLabelText="RATA-RATA PENGELUARAN DALAM SEBULAN"
          app:met_primaryColor="?colorAccent"
          />

      <TextView
          android:id="@+id/floating_periode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_marginTop="@dimen/padding_size_high"
          android:text="@string/dana_darurat_long_time"
          android:textColor="@color/text_state_color_green"
          android:textSize="@dimen/average_text_size"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_marginRight="@dimen/padding_size_high"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tv_year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="@dimen/normal_text_size"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText=""
            app:met_primaryColor="?colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_small"
            android:text="@string/year"
            />

      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_marginRight="@dimen/padding_size_high"
          android:layout_marginTop="@dimen/padding_size_high"
          android:text="@string/dana_darurat_prepared_for_months"
          android:textSize="@dimen/average_text_size"
          />

      <SeekBar
          android:id="@+id/seekbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_medium"
          android:layout_marginRight="@dimen/padding_size_medium"
          android:layout_marginTop="@dimen/padding_size_small"
          />

      <LinearLayout
          android:id="@+id/ll_label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="14dp"
          android:layout_marginRight="14dp"
          android:layout_marginTop="@dimen/padding_size_tiny"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/green_dompet_ori"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/green_dompet_ori"
            />


      </LinearLayout>

      <TextView
          android:id="@+id/tv_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/padding_size_medium"
          android:background="@drawable/rounded_square_green_solid"
          android:paddingBottom="@dimen/padding_size_tiny"
          android:paddingLeft="@dimen/padding_size_medium"
          android:paddingRight="@dimen/padding_size_medium"
          android:paddingTop="@dimen/padding_size_tiny"
          android:text="0 bulan"
          android:textColor="@color/white"
          />

      <TextView
          android:id="@+id/tv_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/padding_size_high"
          android:lineSpacingExtra="@dimen/padding_size_micro"
          android:text="@string/lorem_ipsum"
          />

      <TextView
          android:id="@+id/tv_disclaimer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/padding_size_medium"
          android:padding="@dimen/padding_size_small"
          android:text="@string/disclaimer"
          />


      <Button
          android:id="@+id/btn_next"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_marginRight="@dimen/padding_size_high"
          android:layout_marginTop="@dimen/padding_size_medium"
          android:background="@drawable/button_rounded_orange_send_stroked"
          android:enabled="false"
          android:stateListAnimator="@null"
          android:text="@string/selanjutnya"
          android:textAllCaps="false"
          android:textColor="@color/text_button_selector_orange"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/padding_size_high"
          />

    </LinearLayout>

  </ScrollView>

</LinearLayout>