<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_passcode_title"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="@string/enter_passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/iv_tanda_satu"
                    android:background="@drawable/shape_oval"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tag="iv1"/>

                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/iv_tanda_dua"
                    android:background="@drawable/shape_oval"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tag="iv2"/>

                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/iv_tanda_tiga"
                    android:background="@drawable/shape_oval"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tag="iv3"/>

                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/iv_tanda_empat"
                    android:background="@drawable/shape_oval"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tag="iv4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_1"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn"/>

                <Button
                    android:id="@+id/btn_2"
                    android:textColor="@color/white"
                    android:text="2"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn" />

                <Button
                    android:id="@+id/btn_3"
                    android:textColor="@color/white"
                    android:text="3"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_4"
                    android:textColor="@color/white"
                    android:text="4"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn" />

                <Button
                    android:id="@+id/btn_5"
                    android:textColor="@color/white"
                    android:text="5"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn"/>

                <Button
                    android:id="@+id/btn_6"
                    android:textColor="@color/white"
                    android:text="6"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_7"
                    android:textColor="@color/white"
                    android:text="7"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn"/>

                <Button
                    android:id="@+id/btn_8"
                    android:textColor="@color/white"
                    android:text="8"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn" />

                <Button
                    android:id="@+id/btn_9"
                    android:textColor="@color/white"
                    android:text="9"
                    android:textSize="30dp"
                    android:background="@drawable/button_oval_alpha"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:tag="btn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_passcode_clear"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/clear"
                    android:textColor="@color/white"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/button_oval_alpha"
                    android:gravity="center_horizontal|center_vertical"
                    android:tag="btn"/>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_passcode_done"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="19sp"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>