<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/ic_back"
      android:layout_width="@dimen/ds_action_bar_size"
      android:layout_height="@dimen/ds_action_bar_size"
      android:clickable="true"
      android:gravity="center"
      android:text="{dsf-arrow-back}"
      android:textSize="@dimen/huge_text_size"
      android:background="?attr/actionBarItemBackground"
      />

  <TextView
      android:id="@+id/tv_title"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/ds_action_bar_size"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="@string/add_category"
      android:textColor="@color/black"
      android:textSize="@dimen/big_text_size_2"
      />

  <Button
      android:id="@+id/ic_menu"
      android:layout_width="@dimen/ds_action_bar_size"
      android:layout_height="22dp"
      android:layout_marginRight="@dimen/padding_size_medium"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/button_orange_rounded"
      android:textAllCaps="false"
      android:text="@string/login"
      android:textColor="@color/white"
      android:stateListAnimator="@null"
      android:textSize="@dimen/small_text_size"
      />

</RelativeLayout>