<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      >
  <ImageView
      android:id="@+id/img"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/intro1"
      android:padding="@dimen/padding_root_layout"
      android:layout_margin="@dimen/padding_size_high"
      />

  </FrameLayout>

  <TextView
      android:id="@+id/tv_text"
      android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
      android:gravity="center"
      android:textSize="@dimen/landing_sliding_text_size"
      android:lineSpacingExtra="6dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_size_high"
      />

</LinearLayout>