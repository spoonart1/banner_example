<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipChildren="true"
    android:background="@drawable/shape_rounded_dialog"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="@dimen/padding_size_high"
      android:text="@string/filter_by"
      android:textSize="@dimen/big_text_size_2"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recycleview"
      android:paddingLeft="@dimen/padding_size_small"
      android:paddingRight="@dimen/padding_size_small"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <TextView
      android:id="@+id/ok"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:layout_gravity="center_horizontal"
      android:padding="@dimen/padding_size_high"
      android:text="OK"
      android:textColor="@color/blue_700"
      android:clickable="true"
      android:background="@drawable/button_white_rounded_bottom_only"
      />

</LinearLayout>