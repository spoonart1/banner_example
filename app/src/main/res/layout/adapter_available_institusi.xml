<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/my_plan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_size_medium"
      android:layout_marginRight="@dimen/padding_size_medium"
      android:layout_marginTop="@dimen/padding_size_small"
      android:layout_marginBottom="@dimen/padding_size_small"
      app:cardCornerRadius="@dimen/padding_size_tiny"
      app:cardElevation="@dimen/normal_elevation"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:padding="@dimen/padding_size_medium"
          android:background="?attr/actionBarItemBackground"
          >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >

          <com.mikepenz.iconics.view.IconicsTextView
              android:id="@+id/icon"
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:text="{dsf-manulife}"
              android:gravity="center"
              android:textSize="@dimen/circle_icon_text_size"
              android:textColor="@color/green_manulife"
              />

          <TextView
              android:id="@+id/header_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Title Text"
              android:layout_weight="1"
              android:layout_marginLeft="@dimen/padding_size_medium"
              android:textColor="@color/green_manulife"
              android:textSize="@dimen/big_text_size"
              />

          <com.mikepenz.iconics.view.IconicsTextView
              android:layout_width="@dimen/ds_action_bar_size"
              android:layout_height="@dimen/ds_action_bar_size"
              android:layout_marginLeft="@dimen/padding_size_high"
              android:textSize="@dimen/big_text_size"
              android:gravity="right|center_vertical"
              android:text="{dsf-right-chevron-thin}"
              />

        </LinearLayout>

      </LinearLayout>

  </android.support.v7.widget.CardView>
</LinearLayout>