<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_size_high"
    >


  <com.rengwuxian.materialedittext.MaterialEditText
      android:id="@+id/et_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_size_high"
      android:layout_marginRight="@dimen/padding_size_high"
      android:layout_marginTop="@dimen/padding_size_medium"
      android:singleLine="true"
      android:inputType="textPassword"
      android:textSize="@dimen/normal_text_size"
      android:hint="@string/password_only"
      app:met_floatingLabel="highlight"
      app:met_floatingLabelText="@string/password_only"
      app:met_primaryColor="?colorAccent"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_size_medium"
        android:layout_marginLeft="@dimen/padding_size_high"
        android:layout_marginRight="@dimen/padding_size_high"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="@string/confirm_password_only"
        android:textSize="@dimen/normal_text_size"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/confirm_password_only"
        app:met_primaryColor="?colorAccent"
        />

    <ImageView
        android:id="@+id/show_pass"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginRight="@dimen/padding_size_high"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/eye"
        />

  </FrameLayout>

  <Button
      android:id="@+id/btn_next"
      android:text="@string/selanjutnya"
      android:textAllCaps="false"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:enabled="false"
      android:textColor="@color/text_button_selector_orange"
      android:layout_margin="@dimen/padding_root_layout"
      android:stateListAnimator="@null"
      android:background="@drawable/button_rounded_orange_send_stroked"
      />


</LinearLayout>