<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey_200"
      android:orientation="vertical"
      android:padding="@dimen/padding_size_high"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/tv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cashflow"
          android:textSize="@dimen/bigger_text_size"
          />

      <TextView
          android:id="@+id/tv_bulan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Bulan ini"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_size_small"
        android:layout_marginTop="@dimen/padding_size_small"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/label_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/income"
            android:textColor="@color/black"
            android:textSize="@dimen/smaller_text_size"
            />

        <javasign.com.dompetsehat.view.CustomProgress
            android:id="@+id/line_progress_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_size_small"
            />

        <View
            android:id="@+id/splitter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_size_small"
            />

        <TextView
            android:id="@+id/label_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/expense"
            android:textColor="@color/black"
            android:textSize="@dimen/smaller_text_size"
            />

        <javasign.com.dompetsehat.view.CustomProgress
            android:id="@+id/line_progress_bot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_size_small"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:gravity="right"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/value_right_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:text="Rp 888.888"
            android:textSize="@dimen/normal_text_size"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_size_small"
            />

        <TextView
            android:id="@+id/value_right_bot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:text="Rp 888.888"
            android:textSize="@dimen/normal_text_size"
            />

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_size_medium"
        android:layout_marginTop="@dimen/padding_size_high"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:text="Pemasukan bersih"
          android:textSize="@dimen/big_text_size"
          />

      <TextView
          android:id="@+id/value_nett"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_small"
          android:text="Rp 88.888.888"
          android:textColor="@color/green_pastel"
          android:textSize="@dimen/bigger_text_size"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_size_small"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/nett_income"
          android:textSize="@dimen/normal_text_size"
          />

      <TextView
          android:id="@+id/tv_total_balance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rp 888.888"
          android:textSize="@dimen/normal_text_size"
          />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>