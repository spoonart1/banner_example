<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/my_plan"
      android:layout_margin="@dimen/padding_size_medium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="@dimen/padding_size_tiny"
      app:cardElevation="@dimen/normal_elevation"
      >

    <LinearLayout
        android:id="@+id/ll_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/button_home_cardview"
        >

      <ImageView
          android:id="@+id/ic_image"
          android:layout_width="@dimen/home_image_size_width"
          android:layout_height="@dimen/home_image_size_height"
          android:padding="@dimen/padding_size_medium"
          android:src="@drawable/myfin"
          />

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="@dimen/padding_size_medium"
          android:layout_marginBottom="@dimen/padding_size_medium"
          android:layout_marginRight="@dimen/padding_size_medium"
          android:paddingRight="@dimen/padding_size_high"
          >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

          <TextView
              android:id="@+id/header_text"
              android:text="@string/myreferral_header"
              android:textSize="@dimen/big_text_size"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              />

          <com.mikepenz.iconics.view.IconicsTextView
              android:id="@+id/ic_help"
              android:textColor="@color/white"
              android:gravity="center"
              android:layout_marginLeft="@dimen/padding_size_small"
              android:text="@string/home_dialog_text_learn"
              android:padding="@dimen/padding_size_tiny"
              android:textSize="@dimen/normal_text_size"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:background="@drawable/shape_oval_green_100"
              />

        </LinearLayout>

        <TextView
            android:id="@+id/body_text"
            android:text="@string/myreferral_body"
            android:layout_marginTop="@dimen/padding_size_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/footer_text"
            android:layout_marginTop="@dimen/padding_size_small"
            android:textSize="@dimen/average_text_size"
            android:text="@string/myfin_footer"
            android:gravity="center_vertical"
            android:textColor="@color/grey_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

      </LinearLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>