<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height"
    android:background="@color/white">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height">
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/itv_icon"
            android:text="A"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_size_tiny"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_text_size"
            android:textSize="@dimen/circle_icon_text_size"
            android:textColor="@color/drawer_selector"/>
        <TextView
            android:id="@+id/tv_label"
            android:text="Home"
            android:padding="@dimen/padding_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/drawer_selector"/>
    </LinearLayout>
</LinearLayout>