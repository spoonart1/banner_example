<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/simple_small_action_bar_only_back"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_size_high"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_high"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <javasign.com.dompetsehat.utils.IconCategoryRounded
            android:id="@+id/icr_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ic_size="@integer/circle_icon_text_size"
            app:ic_view_size="@integer/circle_icon"
            />

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_medium"
            android:layout_weight="1"
            android:text="@string/dana_pensiun"
            android:textSize="@dimen/big_text_size"
            />

        <TextView
            android:id="@+id/tv_persen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_size_medium"
            android:gravity="center|right"
            android:text="10,8%"
            android:textColor="@color/orange"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_medium"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stored"
            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_target_plan"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_tiny"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/tv_setor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp 88.888"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            />

      </LinearLayout>

      <javasign.com.dompetsehat.view.CustomProgress
          android:id="@+id/cp_bar"
          android:layout_width="match_parent"
          android:layout_height="@dimen/padding_size_small"
          android:layout_marginTop="@dimen/padding_size_small"
          />

      <LinearLayout
          android:id="@+id/ll_detail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_high"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

          <com.mikepenz.iconics.view.IconicsTextView
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_marginRight="@dimen/padding_size_small"
              android:gravity="center"
              android:text="{dsf-pot-money}"
              android:textColor="@color/grey_700"
              android:textSize="@dimen/circle_icon_text_size"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/estimated_profit"
              android:textColor="@color/grey_700"
              />

          <TextView
              android:id="@+id/tv_profit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_size_small"
              android:gravity="right"
              android:text="4%"
              />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider_size"
            android:layout_marginTop="@dimen/padding_size_high"
            android:background="@color/grey_200"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

          <com.mikepenz.iconics.view.IconicsTextView
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_marginRight="@dimen/padding_size_small"
              android:gravity="center"
              android:text="{dsf-money-paper}"
              android:textColor="@color/grey_700"
              android:textSize="@dimen/circle_icon_text_size"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/monthly_deposit"
              android:textColor="@color/grey_700"
              />

          <TextView
              android:id="@+id/tv_monthly_credit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_size_small"
              android:gravity="right"
              android:text="Rp 1000.000"
              />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider_size"
            android:layout_marginTop="@dimen/padding_size_high"
            android:background="@color/grey_200"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

          <com.mikepenz.iconics.view.IconicsTextView
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_marginRight="@dimen/padding_size_small"
              android:gravity="center"
              android:text="{dsf-hourglass}"
              android:textColor="@color/grey_700"
              android:textSize="@dimen/circle_icon_text_size"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/time_achievement"
              android:textColor="@color/grey_700"
              />

          <TextView
              android:id="@+id/tv_target"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_size_small"
              android:gravity="right"
              android:text="3 Tahun"
              />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_divider_size"
            android:layout_marginTop="@dimen/padding_size_high"
            android:background="@color/grey_200"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

          <com.mikepenz.iconics.view.IconicsTextView
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_marginRight="@dimen/padding_size_small"
              android:gravity="center"
              android:text="{dsf-callendar-2}"
              android:textColor="@color/grey_700"
              android:textSize="@dimen/circle_icon_text_size"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/time_reach"
              android:textColor="@color/grey_700"
              />

          <TextView
              android:id="@+id/tv_left_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_size_small"
              android:gravity="right"
              android:text="28 Feb 2025"
              />

        </LinearLayout>


      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/line_divider_size"
          android:layout_marginTop="@dimen/padding_size_high"
          android:background="@color/grey_200"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_high"
          android:text="@string/account"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_tiny"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/not_connected"
            android:textSize="@dimen/big_text_size"
            />

        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/indicator"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="{cmd-checkbox-blank-circle}"
            android:textColor="@color/red_500"
            android:textSize="@dimen/bigger_text_size"
            />

      </LinearLayout>

      <Button
          android:id="@+id/btn_action"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_high"
          android:layout_marginLeft="@dimen/padding_size_medium"
          android:layout_marginRight="@dimen/padding_size_medium"
          android:background="@drawable/button_rounded_white_landing_try_stroked"
          android:stateListAnimator="@null"
          android:text="@string/connect_now_long"
          android:textAllCaps="false"
          android:textColor="@color/state_button_white_landing_try"
          />

      <LinearLayout
          android:id="@+id/btn_detail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_medium"
          android:layout_marginRight="@dimen/padding_size_medium"
          android:layout_marginTop="@dimen/padding_size_high"
          android:background="@drawable/button_orange_rounded"
          android:gravity="center"
          android:orientation="horizontal"
          android:padding="@dimen/padding_size_small"
          >

        <TextView
            android:id="@+id/tv_value_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0 Transaksi"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            />

        <com.mikepenz.iconics.view.IconicsTextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/padding_size_medium"
            android:gravity="center"
            android:text="{dsf-right-chevron-thin}"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size"
            />
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/space_height_25"/>

    </LinearLayout>

  </ScrollView>

</LinearLayout>