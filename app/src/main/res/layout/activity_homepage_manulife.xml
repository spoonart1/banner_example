<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vendor_manulife"
    android:orientation="vertical"
    >

  <include layout="@layout/simple_small_action_bar_only_back"/>

  <TextView
      android:id="@+id/tv_subtitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_size_high"
      android:gravity="center"
      android:text="@string/welcome_to_manulife"
      android:textColor="@color/white"
      android:textSize="@dimen/huge_text_size"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="@dimen/padding_size_high"
      android:text="@string/manulife_collaborate_with"
      android:textColor="@color/white"
      android:textSize="@dimen/normal_text_size"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/padding_size_medium"
      android:paddingLeft="@dimen/padding_size_high"
      android:paddingRight="@dimen/padding_size_high"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_medium"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:src="@drawable/ic_pot_manulife"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_high"
          android:gravity="center"
          android:text="@string/manulife_start_invest_to_product"
          android:textColor="@color/white_text_light"
          android:textSize="@dimen/normal_text_size"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_medium"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:src="@drawable/ic_share_manulife"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_high"
          android:gravity="center"
          android:text="@string/manulife_enjoy_the_comission"
          android:textColor="@color/white_text_light"
          android:textSize="@dimen/normal_text_size"
          />
    </LinearLayout>

  </LinearLayout>

  <Button
      android:id="@+id/btn_next"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_root_layout"
      android:layout_marginLeft="@dimen/padding_size_high"
      android:layout_marginRight="@dimen/padding_size_high"
      android:background="@drawable/button_manulife_template"
      android:text="@string/selanjutnya"
      android:textAllCaps="false"
      android:textColor="@color/green_manulife"
      android:textSize="@dimen/normal_text_size"
      />

</LinearLayout>