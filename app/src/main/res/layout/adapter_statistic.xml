<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparant"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/padding_size_small"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:background="?attr/actionBarItemBackground"
      >

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/tv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_size_small"
        android:text="DD"
        android:textColor="@color/text_state_color"
        android:textSize="@dimen/super_huge_text_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding_size_small"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/tv_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Accounts : 3"
              android:textStyle="bold"
              android:textColor="@color/text_state_color"
              />


          <TextView
              android:id="@+id/tv_subtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/padding_size_high"
              android:text="Balance"
              android:textSize="@dimen/average_text_size"
              android:textColor="@color/text_state_color"
              />

          <TextView
              android:id="@+id/tv_total"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/padding_size_small"
              android:text="Rp 0"
              android:visibility="gone"
              />

        </LinearLayout>

        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/padding_size_medium"
            android:text="{gmd-chevron-right}"
            android:textColor="@color/text_state_color"
            android:textSize="@dimen/big_text_size"
            />


      </LinearLayout>


    </LinearLayout>

  </LinearLayout>

  <View
      android:id="@+id/v_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/grey_300"
      />

</LinearLayout>