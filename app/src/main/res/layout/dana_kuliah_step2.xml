<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_step1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_size_medium"
    android:paddingLeft="@dimen/padding_size_high"
    android:paddingRight="@dimen/padding_size_high"
    android:paddingTop="@dimen/padding_size_medium"
    android:background="@color/white"
    >

  <TextView
      android:text="@string/collegue_finish_target"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/green_dompet_ori"
      android:textSize="@dimen/average_text_size"
      />

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/tv_target"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/padding_size_small"
        android:layout_marginTop="@dimen/padding_size_small"
        android:textSize="@dimen/normal_text_size"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divider_size"
        android:background="@color/grey_200"
        />

    </LinearLayout>

    <TextView
        android:text="Semester"
        android:layout_marginLeft="@dimen/padding_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


  </LinearLayout>

  <TextView
      android:layout_marginTop="@dimen/padding_size_medium"
      android:text="@string/collegue_cost_now"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/green_dompet_ori"
      android:textSize="@dimen/average_text_size"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/tv_biaya"
        android:layout_marginBottom="@dimen/padding_size_small"
        android:layout_marginTop="@dimen/padding_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/normal_text_size"
        />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/btn_info"
        android:textColor="@color/green_dompet_ori"
        android:layout_gravity="right|center_vertical"
        android:text="{dsf-information}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_tiny"
        android:background="@drawable/button_white_oval"
        />

  </FrameLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

  <TextView
      android:layout_marginTop="@dimen/padding_size_medium"
      android:text="@string/monthly_money_pocket"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/green_dompet_ori"
      android:textSize="@dimen/average_text_size"
      />

  <TextView
      android:id="@+id/tv_uang_saku"
      android:layout_marginBottom="@dimen/padding_size_small"
      android:layout_marginTop="@dimen/padding_size_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:textSize="@dimen/normal_text_size"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

</LinearLayout>