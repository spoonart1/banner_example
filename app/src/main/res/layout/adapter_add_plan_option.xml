<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/my_plan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_size_medium"
      android:layout_marginRight="@dimen/padding_size_medium"
      android:layout_marginTop="@dimen/padding_size_small"
      android:layout_marginBottom="@dimen/padding_size_small"
      app:cardCornerRadius="@dimen/padding_size_tiny"
      app:cardElevation="@dimen/normal_elevation"
      >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_home_cardview"
        android:clickable="true"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/ic_image"
          android:layout_width="85dp"
          android:layout_height="120dp"
          android:padding="@dimen/padding_size_high"
          android:src="@drawable/pensiun"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingRight="@dimen/padding_size_high"
          >

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dana_pensiun"
            android:textColor="@color/blue_400"
            android:textSize="@dimen/big_text_size"
            />

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_small"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:text="@string/lorem_ipsum"
            android:textSize="@dimen/average_text_size"
            />

      </LinearLayout>

    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>