<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_size_small"
    android:paddingLeft="@dimen/padding_size_high"
    android:paddingRight="@dimen/padding_size_high"
    android:paddingTop="@dimen/padding_size_small"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/custom"
        />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/padding_size_tiny"
        android:text="{dsf-check}"
        android:textColor="@color/green_dompet_ori"
        android:textSize="@dimen/big_text_size"
        />

  </LinearLayout>


  <LinearLayout
      android:layout_marginTop="@dimen/padding_size_tiny"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_stroke"
        android:orientation="horizontal"
        android:padding="@dimen/padding_size_small"
        >

      <com.mikepenz.iconics.view.IconicsTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="{dsf-callendar-2}"
          android:textColor="@color/green_dompet_ori"
          android:textSize="@dimen/normal_text_size"
          />

      <TextView
          android:id="@+id/tv_start"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_tiny"
          android:text="---"
          android:textColor="@color/grey_600"
          />

    </LinearLayout>

    <View
        android:layout_width="@dimen/padding_size_medium"
        android:layout_height="@dimen/line_divider_size"
        />

    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_rect_stroke"
        android:orientation="horizontal"
        android:padding="@dimen/padding_size_small"
        >

      <com.mikepenz.iconics.view.IconicsTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="{dsf-callendar-2}"
          android:textColor="@color/green_dompet_ori"
          android:textSize="@dimen/normal_text_size"
          />

      <TextView
          android:id="@+id/tv_end"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/padding_size_tiny"
          android:text="---"
          android:textColor="@color/grey_600"
          />

    </LinearLayout>

  </LinearLayout>

  <Button
      android:id="@+id/btn_ok"
      android:text="@string/done"
      android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:textColor="@color/text_button_selector"
      android:layout_height="33dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/padding_size_medium"
      android:layout_marginBottom="@dimen/padding_size_small"
      android:stateListAnimator="@null"
      android:enabled="false"
      android:background="@drawable/button_rounded_white_landing_register_stroked"
      />

  <View
      android:id="@+id/v_divider"
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:layout_marginTop="@dimen/padding_size_small"
      android:background="@color/grey_200"
      />

</LinearLayout>