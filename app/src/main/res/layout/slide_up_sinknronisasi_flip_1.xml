<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_high"
    android:background="@color/white"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pilih bulan dan tahun"
      android:textSize="@dimen/big_text_size"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_size_medium"
      android:text="Semua transaksi di bulan dan tahun yang kamu pilih di bawah ini akan diunduh dan disinkronisasi bersama transaksi yang sudah ada"
      android:textColor="@color/grey_600"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_size_medium"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/month"
          />

      <LinearLayout
          android:id="@+id/ll_tab_monthly"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_small"
          android:layout_weight="1"
          android:background="@drawable/shape_rect_stroke"
          android:orientation="horizontal"
          android:padding="@dimen/padding_size_small"
          >

        <com.mikepenz.iconics.view.IconicsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dsf-callendar-2}"
            android:textColor="@color/green_dompet_ori"
            android:textSize="@dimen/normal_text_size"
            />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_small"
            android:text="---"
            android:textSize="@dimen/average_text_size"
            android:textColor="@color/grey_600"
            />

      </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/padding_size_high"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/year"
          />

      <LinearLayout
          android:id="@+id/ll_tab_yearly"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_small"
          android:layout_weight="1"
          android:background="@drawable/shape_rect_stroke"
          android:orientation="horizontal"
          android:padding="@dimen/padding_size_small"
          >

        <com.mikepenz.iconics.view.IconicsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dsf-callendar-2}"
            android:textColor="@color/green_dompet_ori"
            android:textSize="@dimen/normal_text_size"
            />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_small"
            android:text="---"
            android:textSize="@dimen/average_text_size"
            android:textColor="@color/grey_600"
            />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <Button
      android:id="@+id/btn_submit"
      android:layout_marginTop="@dimen/padding_root_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:text="Unduh &amp; sinkronisasikan data"
      android:background="@drawable/button_green_dompet"
      />

</LinearLayout>