<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_step3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_size_medium"
    android:paddingLeft="@dimen/padding_size_high"
    android:paddingRight="@dimen/padding_size_high"
    android:paddingTop="@dimen/padding_size_medium"
    >

  <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey_200"
      android:paddingTop="@dimen/padding_size_medium"
      android:paddingLeft="@dimen/padding_size_small"
      android:paddingRight="@dimen/padding_size_small"
      >

    <TextView
        android:id="@+id/tv_note3"
        android:gravity="center"
        android:textColor="@color/grey_700"
        android:text="@string/custom_plan_final_step_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_result_value3"
        android:text="Rp 888.888.888"
        android:padding="@dimen/padding_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

  </LinearLayout>

</LinearLayout>