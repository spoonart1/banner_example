<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/ic_back"
      android:layout_width="@dimen/ds_action_bar_size"
      android:layout_height="@dimen/ds_action_bar_size"
      android:clickable="true"
      android:gravity="center"
      android:text="{dsf-arrow-back}"
      android:textSize="@dimen/huge_text_size"
      style="@style/Widget.AppCompat.ActionButton"
      />

  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/ic_menu"
      android:layout_width="@dimen/ds_action_bar_size"
      android:layout_height="@dimen/ds_action_bar_size"
      android:layout_alignParentRight="true"
      android:background="@drawable/button_white_oval"
      android:clickable="true"
      android:gravity="center"
      android:text="{cmd-close}"
      android:visibility="gone"
      android:textSize="@dimen/huge_text_size"
      />

  <View
      android:id="@+id/v_divider"
      android:layout_toRightOf="@id/ic_back"
      android:layout_width="@dimen/line_divider_size"
      android:layout_height="@dimen/space_height_25"
      android:layout_centerVertical="true"
      android:background="@color/black"
      />

  <EditText
      android:id="@+id/et_search"
      android:layout_marginLeft="@dimen/padding_size_small"
      android:layout_width="match_parent"
      android:layout_height="@dimen/ds_action_bar_size"
      android:layout_toLeftOf="@id/ic_search"
      android:layout_toRightOf="@id/v_divider"
      android:background="@null"
      android:hint="@string/search_hint"
      android:textColorHint="@color/grey_400"
      android:textCursorDrawable="@null"
      >
    <requestFocus/>
  </EditText>



</RelativeLayout>