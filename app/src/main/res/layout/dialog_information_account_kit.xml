<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/padding_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:textStyle="bold"
      android:text="Dompetsehat Menggunakan Teknologi dari Account kit agar bisa Login tanpa menggunakan password, Langkah nya sebagai berikut:"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:text="1. "
        android:layout_width="30dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:text="Klik Tombol Saya mengerti dibawah ini, kemudian input Email kamu,"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:text="2. "
        android:layout_width="30dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:text="Account Kit akan mengirimkan email sillahkan buka email, kemudian klik tombol Continue / Lanjutkan (Berwarna biru)"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:text="3. "
        android:layout_width="30dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:text="Selanjutnya klik tombol Login, terakhir klik tombol Open App, kamu akan diarahkan ke Aplikasi dompetsehat dan sudah login."
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
  </LinearLayout>

</LinearLayout>