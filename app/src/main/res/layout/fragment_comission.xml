<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/main_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/green_dompet_ori"
          android:gravity="center"
          android:orientation="vertical"
          app:layout_scrollFlags="scroll|enterAlways|snap"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/tv_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/padding_size_small"
              android:text="Rp 200.000.000.000.000,00"
              android:textColor="@color/white"
              android:textSize="@dimen/huge_text_size"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding_size_tiny"
              android:text="@string/total_comission"
              android:textColor="@color/white"
              android:textSize="@dimen/average_text_size"
              />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/padding_size_small"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

              <TextView
                  android:id="@+id/tv_subscribe"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rp 2.000.000.000.000,00"
                  android:textColor="@color/white"
                  android:textSize="@dimen/normal_text_size"
                  />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal"
                  >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_tiny"
                    android:text="@string/suspended_comission"
                    android:textColor="@color/white"
                    android:textSize="@dimen/average_text_size"
                    />

                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/infoSubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_oval"
                    android:gravity="center"
                    android:padding="@dimen/padding_size_small"
                    android:text="{dsf-information}"
                    android:textColor="@color/white"
                    />

              </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

              <TextView
                  android:id="@+id/tv_total_pending"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rp 24.000.000.000,00"
                  android:textColor="@color/white"
                  android:textSize="@dimen/normal_text_size"
                  />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal"
                  >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_tiny"
                    android:text="@string/paid_comission"
                    android:textColor="@color/white"
                    android:textSize="@dimen/average_text_size"
                    />

                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/infoPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_size_small"
                    android:background="@drawable/button_white_oval"
                    android:gravity="center"
                    android:text="{dsf-information}"
                    android:textColor="@color/white"
                    />

              </LinearLayout>

            </LinearLayout>

          </LinearLayout>


          <TextView
              android:id="@+id/tv_disclaimer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="@string/disclaimer"
              android:textColor="@color/white"
              android:textSize="@dimen/small_text_size"
              android:padding="@dimen/padding_size_small"
              />

        </LinearLayout>

      </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="@dimen/padding_size_small"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_size_small"
            android:text="10 komisi terakhir anda"
            android:textSize="@dimen/big_text_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_size_small"
            >

          <TextView
              android:id="@+id/textView2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Tanggal"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text="Tertahan"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text="Dibayarkan"
              />

        </LinearLayout>

      </LinearLayout>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/recycleview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
          />

    </LinearLayout>

  </android.support.design.widget.CoordinatorLayout>

  <include layout="@layout/custom_blank_view"/>

</FrameLayout>
