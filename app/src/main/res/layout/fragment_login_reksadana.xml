<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/frame_login"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/high_elevation"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/normal_elevation">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_size_medium"
            >

            <TextView
                android:text="Login Manulife"
                android:textSize="@dimen/bigger_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_manulife"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_only"
                android:maxLines="1"
                android:layout_marginTop="@dimen/padding_size_small"
                android:textSize="@dimen/normal_text_size"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Email yang terdaftar di Manulife"
                app:met_primaryColor="?colorAccent" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_only"
                android:maxLines="1"
                android:layout_marginTop="@dimen/padding_size_small"
                android:textSize="@dimen/normal_text_size"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Password Manulife"
                app:met_primaryColor="?colorAccent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>