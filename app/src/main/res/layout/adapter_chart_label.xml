<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_size_small"
    android:layout_marginLeft="@dimen/padding_size_medium"
    android:layout_marginRight="@dimen/padding_size_medium"
    android:layout_marginTop="@dimen/padding_size_small"
    app:cardBackgroundColor="@color/grey_100"
    app:cardElevation="@dimen/normal_elevation"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/actionBarItemBackground"
      android:gravity="center_vertical"
      android:paddingBottom="@dimen/padding_size_medium"
      android:paddingLeft="@dimen/padding_size_medium"
      android:paddingRight="@dimen/padding_size_medium"
      android:paddingTop="@dimen/padding_size_medium"
      >

    <javasign.com.dompetsehat.utils.IconCategoryRounded
        android:id="@+id/icr_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ic_view_size="@integer/circle_icon"
        />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_size_medium"
        android:layout_marginRight="@dimen/padding_size_medium"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="unknown"
        />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Rp 0"
        />

  </LinearLayout>

</android.support.v7.widget.CardView>