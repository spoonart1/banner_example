<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/btn_tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_size_tiny"
      android:paddingLeft="@dimen/padding_size_small"
      android:paddingRight="@dimen/padding_size_small"
      android:paddingTop="@dimen/padding_size_tiny"
      android:paddingBottom="@dimen/padding_size_tiny"
      android:background="@drawable/tag_state_true"
      android:gravity="center"
      android:maxLines="1"
      android:text="#Social"
      android:textColor="@color/white"
      android:textSize="8sp"
      />
</LinearLayout>