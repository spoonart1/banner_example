<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_size_medium"
    android:background="@color/white"
    android:layout_marginTop="@dimen/padding_size_medium">
    <TextView
        android:id="@+id/tv_title"
        android:text="@string/budget"
        android:textStyle="bold"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/total_only"
        android:textSize="@dimen/average_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/value1"
            android:text="Rp 0"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/padding_size_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/amount_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <javasign.com.dompetsehat.view.CustomProgress
        android:id="@+id/cp_bar"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"/>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/value2"
            android:text="Rp 0"
            android:layout_marginRight="@dimen/padding_size_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="of"
            android:layout_marginRight="@dimen/padding_size_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/value3"
            android:text="Rp 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingTop="@dimen/padding_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_more"
            android:text="@string/view_more"
            android:textStyle="bold"
            android:paddingTop="@dimen/padding_size_small"
            android:paddingBottom="@dimen/padding_size_small"
            android:textColor="@color/green_tosca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>