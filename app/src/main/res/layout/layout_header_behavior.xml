<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_header"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:alpha="2"
    android:layout_height="@dimen/collapsing_min_height"
    android:background="@color/grey_200"
    >

  <LinearLayout
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:paddingLeft="@dimen/padding_size_small"
      >

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/average_text_size"
        />

    <TextView
        android:id="@+id/tv_persen_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64%"
        android:textSize="@dimen/normal_text_size"
        />


  </LinearLayout>

  <LinearLayout
      android:layout_weight="1"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="@dimen/ds_action_bar_size"
      android:orientation="vertical"
      android:paddingLeft="@dimen/padding_size_small"
      >

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incomplete_total_budget_left"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/average_text_size"
        />

    <TextView
        android:id="@+id/tv_total_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 8000000"
        android:textSize="@dimen/normal_text_size"
        />

  </LinearLayout>


</LinearLayout>