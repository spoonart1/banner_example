<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

  <LinearLayout
      android:orientation="vertical"
      android:paddingTop="@dimen/padding_size_medium"
      android:paddingLeft="@dimen/padding_size_medium"
      android:paddingRight="@dimen/padding_size_medium"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_root_layout_twice"/>

    <TextView
        android:id="@+id/tv_greeting"
        android:text="Hai, {username}"
        android:layout_marginLeft="@dimen/padding_size_medium"
        android:textSize="@dimen/huge_text_size"
        android:textColor="@color/green_dompet_ori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="@string/home_subtitle"
        android:layout_margin="@dimen/padding_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="@string/home_subtitle2"
        android:layout_margin="@dimen/padding_size_medium"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_marginTop="@dimen/padding_size_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>


  </LinearLayout>

</RelativeLayout>