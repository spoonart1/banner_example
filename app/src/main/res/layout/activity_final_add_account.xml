<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_high"
    >

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_margin="@dimen/padding_size_high"
      android:src="@drawable/success_shield"
      />

  <TextView
      android:id="@+id/tv_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/successfully_connected"
      android:textColor="@color/blue_grey_700"
      android:textSize="@dimen/big_text_size"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_root_layout"
      android:text="@string/user_id"
      android:textSize="@dimen/small_text_size"
      />

  <TextView
      android:id="@+id/tv_username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_size_tiny"
      android:background="@drawable/shape_rounded_soft"
      android:padding="@dimen/padding_size_medium"
      android:text="WHOAMI"
      />

  <LinearLayout
      android:id="@+id/btn_detail"
      android:layout_marginTop="@dimen/padding_size_high"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_orange_rounded"
      android:gravity="center"
      android:orientation="horizontal"
      android:padding="@dimen/padding_size_small"
      >

    <TextView
        android:id="@+id/tv_value_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Transaksi"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:layout_weight="1"
        android:textColor="@color/white"
        />

    <com.mikepenz.iconics.view.IconicsTextView
        android:layout_marginLeft="@dimen/padding_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:gravity="center"
        android:text="{dsf-right-chevron-thin}"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/white"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/btn_close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_size_high"
      android:padding="@dimen/padding_size_small"
      android:layout_gravity="center_horizontal"
      android:text="@string/close_this_page"
      />

</LinearLayout>