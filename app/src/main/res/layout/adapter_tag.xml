<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_tag_wrapper"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/btn_tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_size_tiny"
      android:paddingTop="@dimen/padding_size_tiny"
      android:paddingBottom="@dimen/padding_size_tiny"
      android:paddingLeft="@dimen/padding_size_medium"
      android:paddingRight="@dimen/padding_size_medium"
      android:background="@drawable/tag_button"
      android:ellipsize="end"
      android:gravity="center"
      android:maxLength="10"
      android:maxLines="1"
      android:elevation="@dimen/normal_elevation"
      android:text="Social"
      android:textSize="@dimen/smaller_text_size"
      />
</LinearLayout>