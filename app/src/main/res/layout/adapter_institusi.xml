<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_size_medium"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/padding_size_small"
    app:cardElevation="@dimen/normal_elevation"
    >

  <LinearLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:background="@drawable/button_white"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_root_layout"
        android:paddingLeft="@dimen/padding_size_high"
        android:paddingRight="@dimen/padding_size_medium"
        android:paddingTop="@dimen/padding_size_high"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{dsf_general}"
            android:textColor="@color/green_manulife"
            android:textSize="@dimen/huge_text_size"
            />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_small"
            android:layout_weight="1"
            android:text="@string/manulife_aset_manajemen"
            />

      </LinearLayout>

      <TextView
          android:id="@+id/tv_long_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/padding_size_high"
          android:lineSpacingExtra="@dimen/padding_size_tiny"
          android:textColor="@color/grey_800"
          />

    </LinearLayout>


    <com.mikepenz.iconics.view.IconicsTextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_grey_light"
        android:gravity="center"
        android:text="{dsf-right-chevron-thin}"
        android:textColor="@color/green_manulife"
        android:textSize="@dimen/big_text_size"
        />

  </LinearLayout>

</android.support.v7.widget.CardView>