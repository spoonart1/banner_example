<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingTop="@dimen/padding_size_tiny"
      android:paddingBottom="@dimen/padding_size_tiny"
      android:paddingLeft="@dimen/padding_size_high"
      android:paddingRight="@dimen/padding_size_high"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/average_text_size"
        />

      <TextView
          android:id="@+id/tv_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:visibility="gone"
          android:layout_marginLeft="@dimen/padding_size_small"
          android:textColor="@color/blue_traveloka"
          />

      <View
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/padding_size_high"
          android:layout_width="match_parent"
          android:layout_height="@dimen/line_divider_size"
          android:background="@color/grey_200"/>

      </LinearLayout>

    <!--<TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:layout_marginRight="@dimen/padding_size_medium"
        android:gravity="right|center"
        android:textStyle="bold"
        />-->

    <!--<com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/indicator"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{cmd-dots-vertical}"
        android:textSize="@dimen/big_text_size"
        android:padding="@dimen/padding_size_small"
        android:textStyle="bold"
        android:background="@drawable/button_white"
        />-->

  </LinearLayout>

</LinearLayout>