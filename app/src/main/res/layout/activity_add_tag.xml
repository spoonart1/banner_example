<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/simple_small_action_bar_back_and_single_menu"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />

  <TextView
      android:text="@string/add_tag_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_size_medium"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_size_medium"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingTop="@dimen/padding_size_medium"
      >

    <com.mikepenz.iconics.view.IconicsTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{dsf-category}"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/huge_text_size"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_tag_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_size_small"
        android:background="@drawable/edittext_background_grey"
        android:hint="@string/add_tag_hint"
        android:paddingBottom="@dimen/padding_size_small"
        android:paddingTop="@dimen/padding_size_medium"
        android:singleLine="true"
        android:textSize="@dimen/normal_text_size"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelText="NAMA TAGAR"
        app:met_primaryColor="?colorAccent"
        />

  </LinearLayout>

</LinearLayout>