<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:id="@+id/ll_content_thankfull"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:gravity="center"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/successfeedback"
        />

    <TextView
        android:layout_marginTop="@dimen/padding_root_layout_twice"
        android:gravity="center"
        android:text="@string/feed_back_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_close"
        android:text="@string/close"
        android:layout_margin="@dimen/padding_root_layout_twice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/grey_700"
        />

  </LinearLayout>
</LinearLayout>