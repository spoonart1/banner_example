<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_white"
    android:clipChildren="true"
    android:orientation="vertical"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/padding_size_small"
      android:layout_marginRight="@dimen/padding_size_small"
      >

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{gmd-close}"
        android:layout_gravity="right|center_vertical"
        android:textSize="@dimen/big_text_size"
        android:background="@drawable/button_white"
        android:padding="@dimen/padding_size_tiny"
        />

  </FrameLayout>

  <!--<View
      android:layout_width="match_parent"
      android:layout_height="@dimen/line_divider_size"
      android:background="@color/grey_200"
      />-->

  <LinearLayout
      android:id="@+id/ll_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:paddingLeft="@dimen/padding_size_high"
      android:paddingRight="@dimen/padding_size_high"
      android:paddingBottom="@dimen/padding_root_layout"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disclaimer"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/big_text_size_2"
        />

    <TextView
        android:id="@+id/tv_top"
        android:layout_marginTop="@dimen/padding_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/padding_size_micro"
        android:textColor="@color/grey_800"
        android:text="@string/comission_not_tax_yet"
        />

    <TextView
        android:id="@+id/tv_bot"
        android:layout_marginTop="@dimen/padding_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/average_text_size"
        android:textColor="@color/green_dompet_ori"
        android:text="DompetSehat.com"
        />

  </LinearLayout>


</LinearLayout>