<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <com.mikepenz.iconics.view.IconicsTextView
      android:id="@+id/ic_back"
      android:layout_width="@dimen/ds_action_bar_size"
      android:layout_height="@dimen/ds_action_bar_size"
      android:background="?attr/actionBarItemBackground"
      android:gravity="center"
      android:text="{dsf-arrow-back}"
      android:textColor="@color/green_manulife"
      android:textSize="@dimen/huge_text_size"
      />

  <TextView
      android:id="@+id/tv_title"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/ds_action_bar_size"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="@string/all_trends"
      android:textColor="@color/black"
      android:textSize="@dimen/big_text_size_2"
      />

  <TextView
      android:id="@+id/tv_brand"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:padding="@dimen/padding_size_small"
      android:text="@string/manulife_aset_manajemen_right_bold"
      android:textColor="@color/green_manulife"
      android:textSize="@dimen/big_text_size"
      />

</RelativeLayout>