<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_size_medium"
      android:layout_marginRight="@dimen/padding_size_medium"
      >

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/ic_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{dsf-note}"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/huge_text_size"
        />

    <com.rengwuxian.materialedittext.MaterialEditText

        android:id="@+id/et_note"
        android:layout_toRightOf="@id/ic_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background_grey"
        android:hint="Catatan tambahan"
        android:textSize="@dimen/normal_text_size"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Catatan tambahan"
        app:met_primaryColor="?colorAccent"
        />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/ic_time"
        android:layout_marginLeft="@dimen/padding_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ic_note"
        android:layout_toRightOf="@id/et_note"
        android:text="{dsf-date}"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/huge_text_size"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@id/ic_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background_grey"
        android:maxLines="1"
        android:paddingBottom="@dimen/padding_size_small"
        android:text="Sunday, 05 June 2016"
        />

  </RelativeLayout>


</LinearLayout>