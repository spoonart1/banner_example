<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:padding="@dimen/padding_size_medium"
      android:src="@drawable/logo_manulife"
      android:background="@color/green_manulife"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Syarat dan Ketentuan klikMAMI"
      android:textStyle="bold"
      android:gravity="center"
      android:textColor="@color/white"
      android:textSize="@dimen/bigger_text_size"
      android:paddingLeft="@dimen/padding_size_high"
      android:paddingRight="@dimen/padding_size_high"
      android:paddingBottom="@dimen/padding_size_small"
      android:background="@color/green_manulife"
      />

  <WebView
      android:id="@+id/webview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:fillViewport="true"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/ds_action_bar_size"
      >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_size_tiny"
        android:layout_weight="1"
        android:background="@color/green_manulife"
        >
      <TextView
          android:id="@+id/btn_disagree"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="?attr/actionBarItemBackground"
          android:gravity="center"
          android:text="Saya Tidak Setuju"
          android:textColor="@color/white"
          />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_size_tiny"
        android:layout_weight="1"
        android:background="@color/green_manulife"
        >
      <TextView
          android:id="@+id/btn_agree"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="?attr/actionBarItemBackground"
          android:gravity="center"
          android:text="Saya Setuju"
          android:textColor="@color/white"
          android:textStyle="bold"
          />
    </FrameLayout>

  </LinearLayout>

</LinearLayout>