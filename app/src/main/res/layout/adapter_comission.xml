<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_medium"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1 Agustus"
        />

    <TextView
        android:id="@+id/tv_value_debet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_value_comission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textStyle="bold"
        />

  </LinearLayout>

  <Button
      android:id="@+id/btn_see_all"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_root_layout"
      android:background="@drawable/button_green_dompet"
      android:stateListAnimator="@null"
      android:text="Lihat semua"
      android:textAllCaps="false"
      android:textColor="@color/white"
      android:visibility="gone"
      />

</LinearLayout>